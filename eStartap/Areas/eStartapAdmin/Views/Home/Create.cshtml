@using eStartap.Models
@model Card
@{
    ViewData["Title"] = "Create";
}

<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
<form method="post" enctype="multipart/form-data">
    <div>
        <label class="mb-3">Card title:</label><br />
        <input asp-for="Title" class="form-control  border border-info" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div>
        <label class="mb-3">Card Date:</label><br />
        <input asp-for="Date" class="form-control  border border-info" /><br />
        <span class="text-danger" asp-validation-for="Date"></span>
    </div>
  
    <div>
        <label class="mb-3">Card image:</label><br />
        <input asp-for="Photo" class="form-control border border-info" accept="image/*" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create slider</button>
    </div>
</form>

