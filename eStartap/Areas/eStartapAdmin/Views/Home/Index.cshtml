@using eStartap.Models
@model List<Card>
@{
    ViewData["Title"] = "Index";
}
<div class="table-responsive pt-3">
    <a asp-controller="Home" asp-action="Create" style="color:white;font-size:20px" class="mb-3 btn btn-success">Create Card</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Title
                </th>
                <th>
                    Date
                </th>
                 <th>
                    Settings
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (Card card in Model)
            {
                <tr>
                    <td>
                        <img style="width: 150px; height:90px" src="~/assets/img/@card.Image" />
                    </td>
                    <td>
                        @card.Title
                    </td>
                    <td>

                        @card.Date

                    </td>

                    <td>
                        <div class="d-flex">
                            <div class="detail">
                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@card.Id" class="btn btn-primary"><i class="mdi mdi-details"></i></a>
                            </div>
                            <div class="edit">
                                <a asp-controller="Home" asp-action="Edit" asp-route-id="@card.Id" class="btn btn-warning">
                                    <i class="mdi mdi-tooltip-edit"></i>
                                </a>
                            </div>
                            <div class="delete">
                                <a asp-controller="Home" asp-action="Delete" asp-route-id="@card.Id" class="btn btn-danger"> <i class="mdi mdi-delete-forever"></i></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

